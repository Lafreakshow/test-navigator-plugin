<idea-plugin>
    <id>com.staszkox.test.navigator</id>
    <name>Test navigator</name>
    <version>1.0</version>
    <vendor email="pawel.stacherzak@gmail.com" url="https://github.com/stacherzakp">StaszkoX</vendor>

    <description><![CDATA[
      Plugin adds new gutter icons.<br>
      They allow to navigate to source/test class if corresponding class exists.<br>
    ]]></description>

    <change-notes><![CDATA[
      Release 1.0: First release.<br>
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.staszkox.test.navigator.marker.TestFileMarkerProvider"/>
    </extensions>

</idea-plugin>